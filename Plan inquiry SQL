SELECT QUERYNO, SECTNO, TEXT
FROM SYSIBM.SYSPACKSTMT
WHERE COLLID = 'collid'
  AND NAME   = 'pkgname'
  AND VERSION = 'version'
ORDER BY QUERYNO;

SELECT p.PLANNAME, s.COLLID, s.NAME, s.VERSION, s.QUERYNO, s.TEXT
FROM SYSIBM.SYSPACKLIST p
JOIN SYSIBM.SYSPACKSTMT s
  ON p.COLLID = s.COLLID
 AND p.NAME   = s.NAME
 AND p.VERSION = s.VERSION
WHERE p.PLANNAME = 'YOURPLAN'
ORDER BY s.COLLID, s.NAME, s.QUERYNO;